<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/filterid"
    android:orientation="horizontal"
    android:padding="20dp">


    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="#DDDEDF"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="20dp"
        >

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:background="@drawable/edittext">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/resultname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/prof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/resultname"
                android:text="Lead - Technical Officer"
                android:textSize="10dp">

            </TextView>

            <TextView
                android:id="@+id/resultstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/prof"
                android:text="Not Available"
                android:textSize="10dp"
                android:textColor="#DDDEDF">

            </TextView>

            <TextView
                android:id="@+id/resultprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/resultname"
                android:layout_marginTop="7dp"
                android:textAlignment="textEnd"
                android:text="$500/Session"
                android:textSize="8dp"
                android:textColor="#FFC107">

            </TextView>

            <ImageView
                android:id="@+id/fav_emoji"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/greyheart"
                android:layout_marginTop="5dp"
                android:layout_below="@id/resultname"
                android:layout_alignParentEnd="true">

            </ImageView>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>

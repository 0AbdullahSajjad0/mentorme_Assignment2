<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#DDDEDF"
        app:contentPadding="15dp"
        app:cardCornerRadius="12dp"
        >
        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="@drawable/edittext"
            android:padding="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mentorname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:text="Micheal Drake"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/mentorPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="$900/Session"
                    android:textStyle="bold"
                    android:textColor="#FFC107"/>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/mentorProfession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="NLP Expert"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/mentorStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mentorProfession"
                    android:textSize="10dp"
                    android:text="Available"
                    android:textColor="#26FB2E"/>


                <ImageView
                    android:id="@+id/favouriteIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/red_heart_icon"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true">

                </ImageView>


            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".homepage">

    <FrameLayout
        android:id="@+id/homefragment"
        android:layout_width="match_parent"
        android:background="#C7F4FA"
        android:layout_height="0dp"
        android:layout_weight="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/firstcircle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="-100dp"
                android:layout_marginTop="-50dp"
                android:alpha="0.5"
                android:src="@drawable/blue_circle" />

            <ImageView
                android:id="@+id/secondcircle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="-100dp"
                android:layout_marginTop="-100dp"
                android:layout_toEndOf="@id/firstcircle"
                android:alpha="0.5"
                android:src="@drawable/blue_circle" />





            <LinearLayout

                android:id="@+id/Heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/secondcircle"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="Hello, "
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/homedisplayName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="Abdullah"
                    android:textColor="#0D5995"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/checknotifications"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                app:cardBackgroundColor="#0D5995"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_notifications_none_24">

                </ImageView>

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/subHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Heading"
                android:textSize="16dp"
                android:text="Ready for mentorship? Let's begin the journey!"
                android:textColor="#0D5995"
                android:layout_marginStart="20dp">

            </TextView>

            <HorizontalScrollView
                android:id="@+id/mentortypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstcircle"
                android:layout_marginStart="20dp">

                <!-- Add your horizontally scrollable content here -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#0D5995"
                        app:contentPadding="15dp"
                        app:cardCornerRadius="12dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="All"
                            android:textSize="17dp"
                            android:textColor="@color/white">

                        </TextView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#A2D6FF"
                        app:contentPadding="15dp"
                        app:cardCornerRadius="12dp"
                        android:layout_marginStart="15dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Education"
                            android:textSize="17dp"
                            android:textColor="#0D5995">

                        </TextView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#A2D6FF"
                        app:contentPadding="15dp"
                        app:cardCornerRadius="12dp"
                        android:layout_marginStart="15dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Entrepreneurship"
                            android:textSize="17dp"
                            android:textColor="#0D5995">

                        </TextView>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#A2D6FF"
                        app:contentPadding="15dp"
                        app:cardCornerRadius="12dp"
                        android:layout_marginStart="15dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Personal Growth"
                            android:textSize="17dp"
                            android:textColor="#0D5995">

                        </TextView>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#A2D6FF"
                        app:contentPadding="15dp"
                        app:cardCornerRadius="12dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Career"
                            android:textSize="17dp"
                            android:textColor="#0D5995">

                        </TextView>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/topmentorheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/mentortypes"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:text="Top Mentors for you"
                    android:textStyle="bold"
                    android:textColor="#0D5995"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="12dp"
                    android:text="View All"
                    android:textStyle="bold"
                    android:textColor="#0D5995"/>

            </LinearLayout>




            <!--Top mentors-->




            <HorizontalScrollView
                android:id="@+id/topmentors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/topmentorheading"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/topmentorsrecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"/>

            </HorizontalScrollView>




            <!--Education Mentors-->




            <LinearLayout
                android:id="@+id/edmentorheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/topmentors"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:text="Education Mentors"
                    android:textStyle="bold"
                    android:textColor="#0D5995"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="12dp"
                    android:text="View All"
                    android:textStyle="bold"
                    android:textColor="#0D5995"/>

            </LinearLayout>


            <HorizontalScrollView
                android:id="@+id/edmentors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edmentorheading"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/educationalmentorsrecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"/>

            </HorizontalScrollView>





            <!--Recent Mentors-->





            <LinearLayout
                android:id="@+id/recmentorheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/edmentors"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:text="Recent Mentors"
                    android:textStyle="bold"
                    android:textColor="#0D5995"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="12dp"
                    android:text="View All"
                    android:textStyle="bold"
                    android:textColor="#0D5995"/>

            </LinearLayout>


            <HorizontalScrollView
                android:id="@+id/recmentors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recmentorheading"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp">

                <!-- Add your horizontally scrollable content here -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recentmentorsrecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"/>

            </HorizontalScrollView>


        </RelativeLayout>


    </ScrollView>

    </FrameLayout>

</LinearLayout>
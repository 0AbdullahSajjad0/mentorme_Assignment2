<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7F4FA"
    android:orientation="vertical"
    tools:context=".verfiyphone">


    <ImageView
        android:id="@+id/backtolgnbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/arrow_back_blue" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:gravity="left"
        android:text="Forgot Password?"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#0D5995"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="left"
        android:text="Don't worry! It happens. Please enter the email associated with your account."
        android:textSize="19dp"
        android:textColor="@color/black"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Email"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/black">

        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="15sp"
            android:hint="Enter Email"
            android:background="@drawable/edittext"
            >

        </EditText>

        <Button
            android:id="@+id/resetpassbtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:text="Send"
            android:textSize="20dp"
            android:textColor="@color/white"
            app:cornerRadius="10dp">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember your password? "
            android:textSize="15dp"
            android:textAlignment="center"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/loginlinkforpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login "
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#0D5995"/>

    </LinearLayout>


</LinearLayout>